<Page x:Class="WpfPublisher.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
      Title="LoginPage"
      Background="#1E1E1E">

    <Grid>
        <!-- Centered Login Form -->
        <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
            <StackPanel>
                <!-- Title -->
                <TextBlock Text="Login with GitHub" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White" 
                           HorizontalAlignment="Center" 
                           Margin="0 0 0 20"/>

                <!-- Login Button -->
                <Button Content="Login with GitHub" 
                        Click="LoginWithGitHub_Click" 
                        Width="200" 
                        Height="40" 
                        Background="#007ACC" 
                        Foreground="White" 
                        FontWeight="Bold" 
                        BorderThickness="0" 
                        HorizontalAlignment="Center"
                        />

                <!-- Status Message -->
                <TextBlock x:Name="StatusText" 
                           Text="" 
                           Foreground="Green" 
                           FontSize="12" 
                           HorizontalAlignment="Center" 
                           Margin="0 20 0 0" 
                           Visibility="Collapsed"/>
            </StackPanel>
        </Grid>
    </Grid>
</Page>