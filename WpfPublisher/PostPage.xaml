<Page x:Class="WpfPublisher.PostPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WpfPublisher"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PostPage">

    <StackPanel Margin="30">
        <TextBlock Text="Create New Post" FontSize="20" Margin="0 0 0 20"/>
        <TextBox x:Name="TitleBox" Margin="0 10 0 10"/>
        <TextBox x:Name="ContentBox" AcceptsReturn="True" Height="200" TextWrapping="Wrap" Margin="0 10 0 10"/>
        <Button Content="Submit Post" Click="SubmitPost_Click"/>
        <TextBlock x:Name="StatusText" Margin="10 10 0 0" Foreground="Green"/>
    </StackPanel>
</Page>
